		int val1 = Integer.parseInt(JOptionPane.showInputDialog("Digite o valor 1 : " ));
		int operador = Integer.parseInt(JOptionPane.showInputDialog("Digite o valor 1-soma 2-subtração 3-multiplicação 4-divisão : " ));
		int val2 = Integer.parseInt(JOptionPane.showInputDialog("Digite o valor 2 : " ));
						
			
		if (operador == 1); {
			System.out.println("Total soma = " + (val1 + val2));
		}
		
			
			
